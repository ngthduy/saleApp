<%= text_field_tag 'search', params[:q], placeholder: "Enter name or description book" %>
<%= javascript_tag "
$('#search').change(
  function(){ 
    title = $('#search').val();
    $.ajax({
        url: 'store/search',
        type: 'POST',
        data: {title: title}
    })
});" %>
<br>
<p id="notice"><%= notice %></p>
<h1><%= t('.title_html') %></h1>
<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= link_to image_tag(product.image_url), line_items_path(product_id: product),method: :post, remote: true %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price) %></span>
          <%= button_to t('.add_html'), line_items_path(product_id: product, locale: I18n.locale), remote: true %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
<p><%= will_paginate @products, :previous_label => 'Trở Về', :next_label => 'Tiếp Theo'  %></p>
